<div class="container youplay-store">
  <br><br>
  <div class="col-md-9">
    <!-- Post Info -->
    <article>
      <form class="" action="/questions/savequestion/{{user.id}}" method="post">
        {{#if user}}
        <div class="container youplay-content" itemscope itemtype="http://schema.org/Question">
          <div class="col-md-9">
            <!-- Billing Information -->
            <h2 class="mt-0" itemprop="name">Escribe tu pregunta</h2>
            <div class="row">
              <div class="col-md-12" itemscope itemtype="http://schema.org/Question">
                <p itemprop="name">Titulo de la pregunta:</p>
                <div class="youplay-input">
                  <input type="text" name="titulo" placeholder="Titulo">
                </div>
              </div>
            </div>

            <textarea id="summernote" name="descripcion"></textarea>
            <!-- /Billing Information -->
            <br>
            <button class="btn btn-success">
              Publicar
            </button>
          </div>
        </div>
        {{/if}}
      </form>
    </article>
  </div>

