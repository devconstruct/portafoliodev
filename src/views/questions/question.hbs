<script>
$('#summernote').summernote({
  placeholder: 'Escibe tu pregunta',
  tabsize: 2,
  height: 120,
  toolbar: [
    ['style', ['style']],
    ['font', ['bold', 'underline']],
    ['color', ['color']],
    ['para', ['ul', 'ol', 'paragraph']],
